{
    "env": {
        "es6": true,
        "node": true
    },
    "plugins": [
        "jest"
    ],
    "extends": ["eslint:recommended", "plugin:jest/recommended"],
    "parserOptions": {
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}
